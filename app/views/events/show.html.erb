<div class="col-md-9 col-md-offset-1" >
  <div class="thumbnail">
    <div class="caption-full">
      <h4><a href="#"><%= @event.name %></a></h4>
      <p><%= @event.description%> </p>
      <%= render partial: "event_attendees", locals: { event: @event } %>
    </div>
    <hr>
    <div class = "row">
      <div class="text-left col-md-6">
      <%= past_or_attend_or_unattend(@event) %>
      </div>
      <div class="text-right col-md-6">
      <h4 class="pull-right"> <%= render partial:"shared/event_ticket_price", locals: {event: @event} %></h4>
      </div>
    </div>
  </div>
  <%= link_to events_path do %>
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back to events
  <% end %>
</div>
